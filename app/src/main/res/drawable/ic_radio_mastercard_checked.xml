<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background shape with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" /> <!-- Background color -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- Border width -->
        </shape>

    </item>
    <!-- Add the icon you want to have a rounded border around -->
    <item
        android:drawable="@drawable/ic_mastercard_12"
        android:gravity="center"
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp"/>
</layer-list>